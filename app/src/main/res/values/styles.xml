<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Tab style. -->
    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@color/textColor</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tabText</item>
        <item name="android:textColor">@color/unselectedTabs</item>
    </style>

    <!-- Header text on home page -->
    <style name="headerText">
        <item name="android:textSize">@dimen/homeHeaderTextSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/unselectedTabs</item>
    </style>

    <!-- Home page text -->
    <style name="homePageText">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/unselectedTabs</item>
        <item name="android:layout_margin">@dimen/margins</item>
    </style>

    <!-- List item image -->
    <style name="listImage">
        <item name="android:layout_height">@dimen/listImageSize</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- List item description -->
    <style name="listDescription">
        <item name="android:layout_height">@dimen/listImageSize</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
    </style>
</resources>
